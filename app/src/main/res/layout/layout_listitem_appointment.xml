<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme"
    android:padding="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/circle_image2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:tint="#868686"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/circle_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignTop="@+id/circle_image2"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:tint="@color/colorBuildingNbr3"
            app:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/txtR"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/circle_image2"
            android:layout_marginTop="6dp"
            android:text="R"
            android:textAlignment="center"
            android:textColor="@color/colorGrayFont"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRoomNbr"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txtR"
            android:layout_alignBottom="@+id/circle_image2"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="25dp"
            android:text="3.100"
            android:textAlignment="center"
            android:textColor="@color/colorGrayFont"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRoomName"
            android:layout_width="255dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/circle_image"
            android:text="Mensa Essensausgabe"

            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="italic|bold" />


        <TextView
            android:id="@+id/txtStartName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txtRoomName"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/circle_image"
            android:text="VON Donnerstag"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEndName"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txtRoomName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/txtStartName"
            android:text="BIS Donnerstag"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStartTime"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txtStartName"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/circle_image"
            android:text="15.02.2019
16:45 Uhr"
            android:textAlignment="center"
            android:textColor="@color/colorGrayFont"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtEndTime"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txtEndName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/txtStartTime"
            android:text="16.02.2019
13:13 Uhr"
            android:textAlignment="center"
            android:textColor="@color/colorGrayFont"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btnDeleteAppointment"
            android:layout_width="28dp"
            android:layout_height="27dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="#7A3131"
            android:text="X"
            android:textAlignment="center"
            android:textColor="@color/colorGrayFont"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868686"
        android:layout_marginTop="112dp"/>



</RelativeLayout>

















